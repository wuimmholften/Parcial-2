<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Examen</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
</head>

<body>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Direct</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="container">
      <br>
   <div class="mg-top text-center">
    <a class="btn btn-primary" href="/nuevo" role="button">Nuevo Post</a>
    </div>
    <ul>
        <!-- ejseach -->
        <% posts.forEach(post => { %>
            <li>
                <p>
                    <h5><%= post.nombre %></h3>
                    <br>
                    <%= post.texto %> 
                    <br>
                    <%= post.usuario %>
                    <br>
                </p>
                
                <a class="btn btn-outline-info" href="/detalle/<%= post.id %> " role="button">Comentar</a>
                
                <a class="btn btn-outline-info" href="/editar/<%= post.id %>" role="button">Editar</a>
              
                <a class="btn btn-outline-danger" href="/borrar/<%= post.id %>" role="button">Borrar</a>
                 <p>
                    <%= post.createdAt %>
                </p>
            </li>
            <% }) %>
            
    </ul>
    </div>
</body>

</html>